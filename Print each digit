package Testonline6;

import java.util.Scanner;

public class printeachdigit {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a number");
		int y=sc.nextInt();
		int n=0;
		while(y>0) {
			System.out.println("Y--->"+ y);
			n=y%10;
			System.out.println("N--->"+n );
			y=y/10;
			System.out.println();
		}
		System.out.println("Y--->"+y);
	}
	

}
